static JSValue js_{{ cls.name }}_get_internal_id(JSContext *ctx, JSValueConst this_val) {
    JSClassID _id;
    void *p = JS_GetAnyOpaque(this_val, &_id);
    if (!p) {
        return JS_UNDEFINED;
    }
    return JS_NewInt64(ctx, (int64_t)static_cast<ObjectHeader*>(p)->get());
}

