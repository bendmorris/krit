template<> const {{namespace}}::{{cls.name}} &TypeConverter<const {{namespace}}::{{cls.name}}&>::valueFromJs(JSContext *ctx, const JSValue &val) {
    {{namespace}}::{{cls.name}} *p = ObjectHeader::data<{{namespace}}::{{cls.name}}>(val);
    return *p;
}

template<> JSValue TypeConverter<{{namespace}}::{{cls.name}}&>::valueToJs(JSContext *ctx, const {{namespace}}::{{cls.name}} &val) {
    GET_ENGINE;
    JSValue instance = engine->getCachedInstance(
        ScriptClass<{{namespace}}::{{cls.name}}>::classId(), static_cast<const void *>(&val));
    if (!JS_IsUndefined(instance)) {
        return instance;
    }
    JSValue obj = JS_NewObjectClass(ctx, ScriptClass<{{namespace}}::{{cls.name}}>::classId());
    auto header = ObjectHeader::create();
    header->setRaw((void *)&val);
    JS_SetOpaque(obj, header);
    engine->setCachedInstance(ScriptClass<{{namespace}}::{{cls.name}}>::classId(), &val, obj);
    return obj;
}
template<> JSValue TypeConverter<{{namespace}}::{{cls.name}}>::valueToJs(JSContext *ctx, const {{namespace}}::{{cls.name}} &val) {
    return TypeConverter<{{namespace}}::{{cls.name}}&>::valueToJs(ctx, val);
}
